<h2 class="ui header">
  <i class="inbox icon"></i>
  Listado de reportes
</h2>

<table class="ui inverted table segment">
  <thead>
    <tr>
      <th>Asignatura</th>
      <th>Codigo Asignatura</th>
      <th>Numero de estudiantes</th>
      <th>Docente</th>
      <th>Comentarios</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @reportes.each do |reporte| %>
      <tr>
        <td><%= reporte.asignatura.nombre %></td>
        <td><%= reporte.asignatura.codigo %></td>
        <td><%= reporte.numero_estudiantes %></td>
        <td><%= link_to reporte.docente.nombre, docente_path(reporte.docente) %></td>
        <td><%= reporte.comentario %></td>
        <td><%= link_to 'Mostrar', reporte,"data-no-turbolink" => true %></td>
        <td><%= link_to 'Eliminar', reporte, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="ui orange button">
  <%= link_to 'Nuevo reporte', new_reporte_path,"data-no-turbolink" => true %>
</div>
