<h2 class="ui header">
  <i class="inbox icon"></i>
  Listado de docentes
</h2>
<table class="ui inverted table segment">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Identificacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @docentes.each do |docente| %>
      <tr>
        <td><%= docente.nombre %></td>
        <td><%= docente.identificacion %></td>
        <td><%= link_to 'Mostrar', docente,"data-no-turbolink" => true %></td>
        <td><%= link_to 'Eliminar', docente, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Docente', new_docente_path,"data-no-turbolink" => true %>
